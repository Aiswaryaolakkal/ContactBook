<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/eightdp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.cardview.widget.CardView
        android:id="@+id/user_imag"
        android:layout_width="@dimen/img_width"
        android:layout_height="@dimen/img_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/icon_sie"
        app:cardCornerRadius="14dp"
        app:cardElevation="@dimen/fourdp"
        app:cardUseCompatPadding="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_person_24" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eightdp"
        android:padding="@dimen/fourdp"
        android:text="mmmm"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/fortysp"
        app:layout_constraintLeft_toLeftOf="@+id/user_imag"
        app:layout_constraintTop_toBottomOf="@id/user_imag" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eightdp"
        android:layout_marginTop="@dimen/eightdp"
        android:padding="@dimen/eightdp"
        android:text="mmmm"
        android:textColor="@color/black"
        android:textSize="@dimen/twlsp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_tv" />
    <ImageView
        android:id="@+id/phn_img"
        android:layout_width="@dimen/icon_sie1"
        android:layout_height="@dimen/icon_sie1"
        android:layout_marginLeft="@dimen/eightdp"
        android:scaleType="centerCrop"
        android:tint="@color/black"
        android:src="@drawable/ic_phone_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/phone_tv" />

    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eightdp"
        android:layout_marginTop="@dimen/eightdp"
        android:padding="@dimen/fourdp"
        android:text="mmmm"
        android:textColor="@color/black"
        android:textSize="@dimen/twlsp"
        app:layout_constraintLeft_toRightOf="@+id/phn_img"
        app:layout_constraintTop_toBottomOf="@+id/name_tv" />
    <ImageView
        android:id="@+id/mail_img"
        android:layout_width="@dimen/icon_sie1"
        android:layout_height="@dimen/icon_sie1"
        android:layout_marginLeft="@dimen/eightdp"
        android:scaleType="centerCrop"
        android:tint="@color/black"
        android:src="@drawable/ic_baseline_mail_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/email_tv" />

    <TextView
        android:id="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eightdp"
        android:layout_marginTop="@dimen/eightdp"
        android:padding="@dimen/fourdp"
        android:textColor="@color/blue"
        android:textSize="@dimen/twlsp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/mail_img"
        app:layout_constraintTop_toBottomOf="@+id/phone_tv" />
    <ImageView
        android:id="@+id/location_img"
        android:layout_width="@dimen/icon_sie1"
        android:layout_height="@dimen/icon_sie1"
        android:layout_marginLeft="@dimen/eightdp"
        android:scaleType="centerCrop"
        android:tint="@color/black"
        android:src="@drawable/ic_baseline_location_on_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/address" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eightdp"
        android:layout_marginTop="@dimen/eightdp"
        android:padding="@dimen/fourdp"
        android:text="@string/address"
        android:textColor="@color/black"
        android:textSize="@dimen/twlsp"
app:layout_constraintLeft_toRightOf="@+id/location_img"
        app:layout_constraintTop_toBottomOf="@+id/email_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>